package variaveis;

import javax.swing.JOptionPane;

public class Notas {

	public static void main(String[] args) {
		// Input=> nome, disciplina, duas notas. 
		// Exibir o nome do aluno, a média e a disciplina.
		
		String nome = JOptionPane.showInputDialog("Digite seu nome: ");
		String disciplina = JOptionPane.showInputDialog("Disciplina: ");
		double nota1 = Double.parseDouble(JOptionPane.showInputDialog("Digite sua 1ª nota: "));
		double nota2 = Double.parseDouble(JOptionPane.showInputDialog("Digite sua 2ª nota: "));
		double media = (nota1+nota2)/2;
		
		System.out.println ("Nome do aluno:    " + nome);
		System.out.println("Disciplina:        " + disciplina);
		System.out.println("Média:             " + media);
		

	}

}
