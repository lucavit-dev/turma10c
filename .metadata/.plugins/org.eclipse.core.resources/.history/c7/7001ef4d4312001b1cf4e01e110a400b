package variaveis;

public class ManipulaString {

	public static void main(String[] args) {
		String email = "reginA@gaMA.academy";
		System.out.println("Original: " + email);
		System.out.println("Miniscula: " + email.toLowerCase());
		System.out.println("Maiuscula: " + email.toUpperCase());
		System.out.println("Qntde de caracteres: " + email.length());
		System.out.println("Posição do @: " + email.indexOf("@"));
		System.out.println("Exibir do 2º ao 4º caracter: " + email.substring(0,6));
		System.out.println("Do 3º caracter em diante: " + email.substring(0,2));
	}

}
