package br.com.unixyz.modelo;

public class Formacao {

	private String descricao;
	private int duracao;
	private float mensalidade;
	float retornarMedia;
	
	
	public String getAll() {
		return
				"Descrição: " + descricao + "\n" +
				"Duração: " + duracao + "\n" +
				"Valor Mensalidade: " + mensalidade + "\n";
	}

	public void setAll(String descricao, int duracao, float mensalidade, float retornarMedia) {		
		this.descricao = descricao;
		this.duracao = duracao;
		this.mensalidade = mensalidade;
		this.retornarMedia = retornarMedia;
	}

	public Formacao() {
		super();
	}
	public Formacao(String descricao, int duracao, float mensalidade, float retornarMedia) {
		super();
		this.descricao = descricao;
		this.duracao = duracao;
		this.mensalidade = mensalidade;
		this.retornarMedia = retornarMedia;
	}
	public String getDescricao() {
		return descricao;
	}
	public void setDescricao(String descricao) {
		this.descricao = descricao;
	}
	public int getDuracao() {
		return duracao;
	}
	public void setDuracao(int duracao) {
		this.duracao = duracao;
	}
	public float getMensalidade() {
		return mensalidade;
	}
	public void setMensalidade(float mensalidade) {
		this.mensalidade = mensalidade;
	}
	public float getRetornarMedia() {
		return retornarMedia;
	}
	public void setRetornarMedia(float retornarMedia) {
		this.retornarMedia = retornarMedia;
	}




} //Classe
